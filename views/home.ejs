<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
    <style>
      .no-blogs-text {
        font-size: 20px;
        color: #555;
        margin-top: 50px;
      }

      .no-blogs-text img {
        width: 100px;
        height: 100px;
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <% if (blogs.length > 0) { %>
        <% for (let i = 0; i < blogs.length; i += 4) { %>
          <div class="row">
            <% for (let j = i; j < i + 4 && j < blogs.length; j++) { %>
              <div class="col-md-3 mb-3">
                <div class="card bg-glass">
                  <img
                    class="card-img-top"
                    src="<%= blogs[j].coverImageURL %>"
                    alt="Card image cap"
                  />
                  <div class="card-body">
                    <h5 class="card-title"><%= blogs[j].title %></h5>
                    <a href="/blog/<%= blogs[j]._id %>" class="btn btn-dark">View</a>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        <% } %>
      <% } else { %>
        <div class="text-center no-blogs-text">
          <img src="/blogIcon.png" alt="No Blogs Icon">
          
          <p>No blogs available. Start creating amazing content!</p>
        </div>
      <% } %>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
