<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
  <div class="container-fluid" style="padding-left: 20px; padding-right: 40px;">
    <b class="navbar-brand">Blogify</b>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link <%= locals.currURL === '/' ? 'active' : '' %>" href="/">Home</a>
        </li>
        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link <%= locals.currURL === '/blog/add-new' ? 'active' : '' %>" href="/blog/add-new">Add Blog</a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link <%= locals.currURL === '/user/signup' ? 'active' : '' %>" href="/user/signup">Create Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= locals.currURL === '/user/signin' ? 'active' : '' %>" href="/user/signin">SignIn</a>
          </li>
        <% } %>
      </ul>
    </div>

    <% if (locals.user) { %>
      <div class="d-flex align-items-center gap-2 dropdown">
        <img src="<%= locals.user.profileImageURL %>" alt="" width="30px" height="30px" style="border-radius: 50%; object-fit: cover;">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: white;">
          <%= locals.user.fullName.split(" ")[0] %>
        </a>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
        </ul>
      </div>
    <% } %>
  </div>
</nav>

<% if (locals.error) { %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert"><%= locals.error %></div>
  </div>
<% } %>
